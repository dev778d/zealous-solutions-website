# Environment Variables for Production
# Copy this to .env and update with your actual values

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=production
SECRET_KEY=your-very-secure-secret-key-here

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-business-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_DEFAULT_SENDER=your-business-email@gmail.com

# Business Contact Email (where inquiries will be sent)
BUSINESS_EMAIL=info@zealous-solutions.com

# Database URL (optional - for storing inquiries)
# DATABASE_URL=postgresql://username:password@localhost/zealous_db

# Domain Configuration
DOMAIN_NAME=www.zealous-solutions.com

# Security Settings
WTF_CSRF_ENABLED=True